{
  "title": "Debug & Metrics - smart-advisor",
  "uid": "debug-metrics-smart-advisor",
  "schemaVersion": 38,
  "tags": ["debug", "metrics", "smart-advisor"],
  "editable": true,
  "refresh": "30s",
  "time": {"from": "now-6h", "to": "now"},
  "timezone": "browser",
  "panels": [
    {
      "type": "barchart",
      "title": "Log Level Counts (Loki)",
      "datasource": {"type": "loki", "uid": "P8E80F9AEF21F6940"},
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          },
          "expr": "{container_name=\"/api-smartshopadvisor\"} | json | levelname=~\"(INFO|ERROR|WARNING|CRITICAL)\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "piechart",
      "title": "Error Count by Type (Prometheus)",
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          },
          "expr": "sum(app_error_count_total) by (error_type)",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests by Endpoint & Method",
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          },
          "expr": "sum(app_request_count_total) by (endpoint, method)",
          "refId": "C"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "P95 Latency by Endpoint",
      "datasource": {"type": "prometheus", "uid": "PBFA97CFB590B2093"},
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          },
          "expr": "histogram_quantile(0.95, sum(rate(app_request_latency_seconds_bucket[5m])) by (le, endpoint))",
          "refId": "D"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Live Docker Logs (Loki)",
      "datasource": {"type": "loki", "uid": "P8E80F9AEF21F6940"},
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 12},
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "P8E80F9AEF21F6940"
          },
          "expr": "{container_name=\"/api-smartshopadvisor\"}",
          "refId": "E"
        }
      ]
    }
  ]
